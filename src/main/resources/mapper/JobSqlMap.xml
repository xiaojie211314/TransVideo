<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.soocedu.video.dao.TransCodingMapper">


    <insert id="insertJob" useGeneratedKeys="true" keyProperty="id">
        insert into video_job(filename,srcpath,despath,srcurl,desurl,status,counts,persistentid,inputtime)values(#{filename},#{srcpath},#{despath},#{srcurl},#{desurl},#{status},#{counts},#{persistentid},unix_timestamp())
    </insert>

    <update id="updateJob">
        update video_job set despath = #{despath}, desurl=#{desurl}, counts=#{counts},command=#{command}, msg=#{msg}, updatetime=unix_timestamp(), status=#{status}, error=#{error} where id=#{id}
    </update>


    <!--查找未执行的任务-->
    <select id="findJobTask" resultType="com.soocedu.video.bean.VideoJob">
        select id,filename,command,srcpath,despath,srcurl,desurl,status,counts,msg,error,persistentid from video_job where status= 1 or  status=2  or (counts in (1,2) and status=3)
    </select>

    <!--根据 persistentId 查询视频-->
    <select id="findVideoByPersistentId" resultType="com.soocedu.video.bean.VideoJob" >
        select id,filename,command,srcpath,despath,srcurl,desurl,status,counts,msg,error,persistentid from video_job where persistentid=#{persistentId}
    </select>


    <select id="findVideos" resultType="com.soocedu.video.bean.VideoLook">
        select * , status as code from video_job order by id desc
    </select>


</mapper>
